---
import Navbar from "../components/layout/Navbar.astro"
import MarketingLayout from "../layouts/MarketingLayout.astro"
import Footer from "../components/layout/Footer.astro"
import Goostle from "../assets/goostle.png"
---

<MarketingLayout title="Revolt: 500" backgroundColor="#120A24">
    <Navbar />

    <div class="spacer"></div>
    <div class="lr-pad">
        <div class="center">
            <h1 class="main-heading">Oh, the misery&hellip;</h1>
            <p class="main-heading-sub">
                We've ran into a big issue and we're sorry for the
                inconvenience. Please try again later.
            </p>
            <p class="goostle-hint">
                Here's Goostle walking up a hill to cheer you up.
            </p>
            <img
                src={Goostle.src}
                alt="Goostle, a Revolt mascot. A goose with a turtle shell. The name is a portmanteau of goose and turtle."
                class="goostle"
            />
        </div>
    </div>
    <Footer />
</MarketingLayout>
<style lang="scss">
    .lr-pad {
        max-width: min(130ch, 90vw);
        margin: 0 auto;
        display: grid;
        padding-bottom: 4rem;
    }

    .spacer {
        height: 12rem;
    }

    .center {
        display: block;
        margin: 0 auto;
        text-align: center;
    }

    .main-heading {
        font-size: 4rem;
        font-weight: 750;
        color: white;
        line-height: 1;
    }

    .main-heading-sub {
        font-size: 1.5rem;
        color: white;
        opacity: 0.7;
        margin-bottom: 4rem;
        line-height: 1.5;
    }

    .goostle-hint {
        font-size: 1.2rem;
        color: white;
        opacity: 0.7;
        margin-top: 2rem;
        margin-bottom: 2rem;
    }

    .goostle {
        width: 10rem;
        opacity: 100%;
        display: block;
        margin: 0 auto;
        transform: rotate(-20deg) scaleX(-1);
        border-bottom: 5px solid white;
    }
</style>
